<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:src="@drawable/finance_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="casual"
        ></TextView>

    <EditText
        android:id="@+id/edtTxtFirstName"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:hint="First Name"
        android:inputType="textPersonName"
        ></EditText>

    <EditText
        android:id="@+id/edtTxtLastName"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:hint="Last Name"
        android:inputType="textPersonName"
        ></EditText>

    <EditText
        android:id="@+id/edtTxtUsername_Signup"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:hint="Username"></EditText>

    <EditText
        android:id="@+id/edtTxtEmail"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:inputType="textEmailAddress"
        ></EditText>


    <EditText
        android:id="@+id/edtTxtPassword_Signup"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        ></EditText>

    <EditText
        android:id="@+id/edtTxtConfirmPassword"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        ></EditText>


        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Sign Up"
            android:background="@color/standard"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"

            ></Button>

</LinearLayout>