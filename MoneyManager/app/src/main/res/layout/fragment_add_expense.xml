<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_expense"
    android:background="#F1F1F1"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/standard"
        ></ImageView>

    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-30sp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/get_expense"
            android:layout_width="350sp"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Enter Amount"
            android:textSize="20sp"
            android:textStyle="bold"
            android:inputType="number"
            android:background="@drawable/layout_border"
            android:cursorVisible="false"
            ></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        >

    </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="380sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/line_border"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/transparent"
                >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:src="@drawable/home"
                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                ></TextView>


            </LinearLayout>
            <Button
                android:id="@+id/btn_category_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                ></Button>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120sp"
            android:layout_height="100sp"
            android:layout_marginLeft="20sp"
            android:background="@color/transparent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/transparent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:src="@drawable/bill"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bills"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    ></TextView>


            </LinearLayout>
            <Button
            android:id="@+id/btn_category_bills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            ></Button>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="120sp"
                android:layout_height="100sp"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:src="@drawable/grocery"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        ></TextView>


                </LinearLayout>
                <Button
                    android:id="@+id/btn_category_grocery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    ></Button>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120sp"
                android:layout_height="100sp"
                android:layout_marginLeft="20sp"
                android:background="@color/transparent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:src="@drawable/personal"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        ></TextView>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_category_personal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    ></Button>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="120sp"
                android:layout_height="100sp"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:src="@drawable/transport"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transport"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        ></TextView>


                </LinearLayout>
                <Button
                    android:id="@+id/btn_category_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    ></Button>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120sp"
                android:layout_height="100sp"
                android:layout_marginLeft="20sp"
                android:background="@color/transparent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:src="@drawable/other"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        ></TextView>


                </LinearLayout>
                <Button
                    android:id="@+id/btn_category_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    ></Button>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="120sp"
                android:layout_height="100sp"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:src="@drawable/food"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        ></TextView>


                </LinearLayout>
                <Button
                    android:id="@+id/btn_category_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    ></Button>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120sp"
                android:layout_height="100sp"
                android:layout_marginLeft="20sp"
                android:background="@color/transparent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:src="@drawable/health"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        ></TextView>


                </LinearLayout>
                <Button
                    android:id="@+id/btn_category_health"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    ></Button>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="120sp"
                    android:layout_height="100sp"
                    android:background="@color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/transparent"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:src="@drawable/education"
                            ></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            ></TextView>


                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_category_education"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        ></Button>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120sp"
                    android:layout_height="100sp"
                    android:layout_marginLeft="20sp"
                    android:background="@color/transparent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/transparent"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:src="@drawable/gym"
                            ></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gym"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            ></TextView>


                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_category_gym"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        ></Button>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
            </ScrollView>

    <Button
        android:id="@+id/btn_finish_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Finish"
        android:background="@color/standard"
        android:textColor="@color/white"
        android:textSize="20sp"
        ></Button>

        <Button
            android:id="@+id/btn_add_details_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Add Details"
            android:background="@drawable/round_border"
            android:textSize="20sp"
            ></Button>

    </LinearLayout>

</LinearLayout>